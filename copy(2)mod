   Stats & init
   =========================== */
function updateStatsUI(){ const total = DATA.length, high = DATA.filter(d=>d.risk==='High').length, med = DATA.filter(d=>d.risk==='Medium').length, low = DATA.filter(d=>d.risk==='Low').length; E.statsChip.textContent = `Total: ${total} ‚Ä¢ High: ${high} ‚Ä¢ Medium: ${med} ‚Ä¢ Low: ${low}`; }
function updateSelectCount(){ E.selCount.textContent = String(DATA.filter(d=>d.selected).length || 0); }

function init(){
  loadData();
  if(!Array.isArray(DATA)) DATA = [];
  DATA.forEach(d=>{ if(typeof d.selected==='undefined') d.selected = false; });
  renderTable();
  updateSelectCount();
}
init();

